---
layout:
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed/facebook" | absolute_url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.tags.facebook %}
      {% unless post.draft %}
      {% capture content %}{% if post.link %}{{ post.title | xml_escape }}: {% endif %}{{ post.content | strip_html | xml_escape }}{% endcapture %}
      {% assign size = content | size %}
        <item>
          {% if size > 280 %}
            <description>
              {{ content | truncate: 255, 'â€¦' }} {{ post.url | absolute_url }}
            </description>
          {% else %}
            <description>
              {{ content }}
            </description>
          {% endif %}
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          <link>{{ post.url | absolute_url }}</link>
          <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
          {% for tag in post.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
          {% for cat in post.categories %}
          <category>{{ cat | xml_escape }}</category>
          {% endfor %}
          {% for item in post.hashtag %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
